<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{loginBean.login()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/teacherPage.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{loginBean.login()}</from-action>
            <from-outcome>failure</from-outcome>
            <to-view-id>/noLogin.xhtml</to-view-id>
        </navigation-case>        
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/support.xhtml</from-view-id>    
        <navigation-case>
            <from-action>#{supportBean.addSupport()}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/support.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/newSequence.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{sequenceBean.isSupports()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/support.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{sequenceBean.isSupports()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/newSequenceValidation.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/newSequenceValidation.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{sequenceBean.validateSequence()}</from-action>
            <from-outcome>true</from-outcome>
            <to-view-id>/teacherPage.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{sequenceBean.validateSequence()}</from-action>
            <from-outcome>false</from-outcome>
            <to-view-id>/noLogin.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>allSequencesBean</managed-bean-name>
        <managed-bean-class>com.unalsoft.elitefle.presentation.controller.allSequencesBean</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
</faces-config>
