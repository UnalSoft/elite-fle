<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="com.unalsoft.elite-flePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.unalsoft.elitefle.entity.Activity</class>
    <class>com.unalsoft.elitefle.entity.Sequence</class>
    <class>com.unalsoft.elitefle.entity.Student</class>
    <class>com.unalsoft.elitefle.entity.StudentHasSequence</class>
    <class>com.unalsoft.elitefle.entity.Support</class>
    <class>com.unalsoft.elitefle.entity.Teacher</class>
    <class>com.unalsoft.elitefle.entity.TeacherHasStudent</class>
    <class>com.unalsoft.elitefle.entity.User</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/elitefle"/>
      <property name="javax.persistence.jdbc.password" value="mysqlDB"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
    </properties>
  </persistence-unit>
</persistence>
